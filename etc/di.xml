<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductDataBuilder">
        <arguments>
            <argument name="defaultAttributeTransformer" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\DefaultAttributeTransformer</argument>
            <argument name="attributeTransformers" xsi:type="array">
                <item name="media_gallery" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductAttributeTransformer\MediaGalleryTransformer</item>
                <item name="type_id" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\BaseEntityFieldTransformer</item>
                <item name="tax_class" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\BaseEntityFieldTransformer</item>
                <item name="sku" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\BaseEntityFieldTransformer</item>
                <item name="image" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="small_image" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="thumbnail" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="created_at" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="updated_at" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="custom_attributes" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\CustomAttributeTransformer</item>
                <item name="product_links" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductAttributeTransformer\ProductLinksTransformer</item>
            </argument>
            <argument name="entityEnricherChain" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\VirtualProductEnricherChain</argument>
        </arguments>
    </type>
    <type name="LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\CategoryDataBuilder">
        <arguments>
            <argument name="defaultAttributeTransformer" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\DefaultAttributeTransformer</argument>
            <argument name="attributeTransformers" xsi:type="array">
                <item name="created_at" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                <item name="updated_at" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\AttributeTransformer\IgnoreAttributeTransformer</item>
                </argument>
            <argument name="entityEnricherChain" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\VirtualCategoryEnricherChain</argument>
        </arguments>
    </type>
    <virtualType name="LizardsAndPumpkins\Magento2Connector\Model\ProductExport\VirtualProductEnricherChain" type="LizardsAndPumpkins\Magento2Connector\Model\EntityEnricher\EntityEnricherChain">
        <arguments>
            <argument name="entityEnrichers" xsi:type="array">
                <item name="media_gallery" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductEnricher\MediaGalleryEnricher</item>
                <item name="tax_class" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductEnricher\TaxClassEnricher</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\VirtualCategoryEnricherChain" type="LizardsAndPumpkins\Magento2Connector\Model\EntityEnricher\EntityEnricherChain">
        <arguments>
            <argument name="entityEnrichers" xsi:type="array"/>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="lizardsandpumpkins:products:export" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Command\ExportProductsCommand</item>
                <item name="lizardsandpumpkins:categories:export" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Command\ExportCategoriesCommand</item>
            </argument>
        </arguments>
    </type>
    <type name="LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductListXmlExporter\ProductListXmlExporterList">
        <arguments>
            <argument name="productListXmlExporters" xsi:type="array">
                <item name="file" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductListXmlExporter\ProductListXmlToFileExporter</item>
                <item name="stdout" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\ProductExport\ProductListXmlExporter\ProductListXmlToStdOutExporter</item>
            </argument>
        </arguments>
    </type>
    <type name="LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\CategoryListXmlExporter\CategoryListXmlExporterList">
        <arguments>
            <argument name="categoryListXmlExporters" xsi:type="array">
                <item name="file" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\CategoryListXmlExporter\CategoryListXmlToFileExporter</item>
                <item name="stdout" xsi:type="object">LizardsAndPumpkins\Magento2Connector\Model\CategoryExport\CategoryListXmlExporter\CategoryListXmlToStdOutExporter</item>
            </argument>
        </arguments>
    </type>
</config>
